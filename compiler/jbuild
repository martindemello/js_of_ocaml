(executables
 ((names (jsoo_compile minify))
  (ocamlc_flags (-I +compiler-libs))
  (ocamlopt_flags (-I +compiler-libs))
  (libraries (cmdliner base64 js_of_ocaml_compiler js_of_ocaml_compiler_findlib_support))
  (extra_disabled_warnings (7 9 37 38))
  (preprocess ((no_preprocessing All)))
  (js_of_ocaml ())
  ))

(rule
 ((targets (js_of_ocaml))
  (deps (jsoo_compile.exe))
  (action "cp --remove-destination jsoo_compile.exe js_of_ocaml")))

(alias
  ((name DEFAULT)
   (deps (js_of_ocaml))))

(provides js_of_ocaml)
